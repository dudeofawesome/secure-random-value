// Place your settings in this file to overwrite default and user settings.
{
  "editor.rulers": [80],

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/build": true
  },

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    ".tmp": true,
    "build": true,
    ".nyc_output": true,
    "coverage": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,

    "build/**": true
  },
  "files.associations": {
    ".gitignore": "ini",
    ".env": "ini",
    "*.travis": "yaml"
  },

  "typescript.tsdk": "./node_modules/typescript/lib",
  "tslint.ignoreDefinitionFiles": false
}
